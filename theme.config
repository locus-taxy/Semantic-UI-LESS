/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site       : 'locus';
@reset      : 'locus';

/* Elements */
@button     : 'locus';
@container  : 'locus';
@divider    : 'locus';
@flag       : 'locus';
@header     : 'locus';
@icon       : 'locus';
@image      : 'locus';
@input      : 'locus';
@label      : 'locus';
@list       : 'locus';
@loader     : 'locus';
@rail       : 'locus';
@reveal     : 'locus';
@segment    : 'locus';
@step       : 'locus';

/* Collections */
@breadcrumb : 'locus';
@form       : 'locus';
@grid       : 'locus';
@menu       : 'locus';
@message    : 'locus';
@table      : 'locus';

/* Modules */
@accordion  : 'locus';
@checkbox   : 'locus';
@dimmer     : 'locus';
@dropdown   : 'locus';
@embed      : 'locus';
@modal      : 'locus';
@nag        : 'locus';
@popup      : 'locus';
@progress   : 'locus';
@rating     : 'locus';
@search     : 'locus';
@shape      : 'locus';
@sidebar    : 'locus';
@sticky     : 'locus';
@tab        : 'locus';
@transition : 'locus';

/* Views */
@ad         : 'locus';
@card       : 'locus';
@comment    : 'locus';
@feed       : 'locus';
@item       : 'locus';
@statistic  : 'locus';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import "theme.less";

/* End Config */